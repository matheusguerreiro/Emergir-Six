    <!-- Modal -->
    <div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <%= form_with(url: users_backoffice_profile_path, model: current_user) do |form| %>
            <div class="modal-header">
              <h5 class="modal-title" id="avatarModalLabel">Avatar</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= form.fields_for :user_profile, local: true do |profile_form| %>
                <div class="d-flex flex-column align-items-center">
                  <%= profile_form.label :avatar %>
                  <div class="d-flex flex-column">
                    <%= image_tag(avatar_url, alt:"...", class:"img-circle profile_img mb-4", id:"imgAvatarC") %>
                    <%= profile_form.file_field :avatar %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <%= form.submit 'Save changes', class:"btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'users_backoffice' %>

    <% if notice %>
      <script>
        $.bootstrapGrowl("<%= notice %>", {
          type: 'success', // (null, 'info', 'danger', 'success')
          align: 'right', // ('left', 'right', or 'center')
          allow_dismiss: true, // If true then will display a cross to close the popup.
          stackup_spacing: 10 // spacing between consecutively stacked growls.
        });
      </script>
    <% end %>

    <%= javascript_tag do %>
      $(function() {
        $('.datepicker').datepicker();
      });
