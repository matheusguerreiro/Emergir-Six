<div class="row justify-content-center">
  <div class="col-xl-6 col-lg-6 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row d-flex justify-content-center">
          <div class="col-lg-12">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Log in - Admins</h1>
              </div>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:'user') do |f| %>

                <!-- <div class="form-group">
                  <input type="email" id="exampleInputEmail"
                    aria-describedby="emailHelp" >
                </div> -->
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, placeholder:"Enter Email Address...", class:"form-control form-control-user" %>
                </div>

                <!-- <div class="form-group">
                  <input type="password"  id="exampleInputPassword"
                    >
                </div> -->
                <div class="form-group">
                  <%= f.password_field :password, placeholder:"Password", class:"form-control form-control-user" %>
                </div>

                <!-- <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <input type="checkbox" class="custom-control-input" id="customCheck">
                    <label class="custom-control-label" for="customCheck">Remember
                      Me</label>
                  </div>
                </div> -->
                <% if devise_mapping.rememberable? %>
                  <div class="form-group">
                    <%= f.check_box :remember_me, class:"custom-control-input" %>
                    <%= f.label :remember_me, class:"custom-control-label" %>
                  </div>
                <% end %>

                <!-- <a href="index.html" class="btn btn-primary btn-user btn-block">
                  Login
                </a> -->
                <div>
                  <%= f.submit "Log in", class:'btn btn-primary btn-user btn-block' %>
                </div>
                <!-- <a href="index.html" class="btn btn-google btn-user btn-block">
                  <i class="fab fa-google fa-fw"></i> Login with Google
                </a>
                <a href="index.html" class="btn btn-facebook btn-user btn-block">
                  <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                </a> -->
              <% end %>
              <hr>
              <div class="text-center">
                <a class="small" href="forgot-password.html">Forgot Password?</a>
              </div>
              <div class="text-center">
                <a class="small" href="register.html">Create an Account!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
