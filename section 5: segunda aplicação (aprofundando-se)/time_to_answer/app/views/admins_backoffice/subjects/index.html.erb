<h1 class="pb-3">Assuntos</h1>
<table style="color: rgb(75, 75, 75)" class="table table-striped rounded table-secondary">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">descrição</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle btn-sm" do %>
          <i class="fas fa-plus-square"></i>
        <% end %>
        <%= link_to admins_backoffice_subjects_path(format: :pdf), class:"btn btn-warning btn-circle btn-sm" do %>
          <i class="fas fa-file-pdf"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr scope="row">
        <td><%= subject.id %></td>
        <td><%= subject.description %></td>
        <td>
          <%= link_to edit_admins_backoffice_subject_path(subject.id), class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_subject_path(subject.id), # o caminho
              method: :delete,                                      # o método
              data: {confirm:"Tem certeza?"},                       # a confirmação para o delete
              class:"btn btn-danger btn-circle btn-sm" do %>        <!-- o style bootstrap -->
            <i class="fas fa-minus-square"></i>                     <!-- o ícone fontawesome -->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @subjects %>
</div>