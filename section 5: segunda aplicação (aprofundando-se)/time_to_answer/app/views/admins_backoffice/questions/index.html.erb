<h1 class="pb-3">Questions#index</h1>
<table class="table table-striped table-secondary">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">description</th>
      <th scope="col">subject</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
          <i class="fas fa-plus-square"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr scope="row">
        <td><%= question.id %></td>
        <td><%= question.description.truncate(50) %></td>
        <td><%= question.subject.description %></td>
        <td>
          <%= link_to edit_admins_backoffice_question_path(question.id), class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_question_path(question.id), # o caminho
              method: :delete,                                      # o método
              data: {confirm:"Tem certeza?"},                       # a confirmação para o delete
              class:"btn btn-danger btn-circle btn-sm" do %>        <!-- o style bootstrap -->
            <i class="fas fa-minus-square"></i>                     <!-- o ícone fontawesome -->
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @questions %>
</div>
