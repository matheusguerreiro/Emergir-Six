<h1 class="pb-3">Admins#index</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm" do %>
          <i class="fas fa-plus-square"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
      <tr scope="row">
        <td><%= admin.id %></td>
        <td><%= admin.email %></td>
        <td>
          <%= link_to edit_admins_backoffice_admin_path(admin.id), class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <a href="#" class="btn btn-danger btn-circle btn-sm">
            <i class="fas fa-minus-square"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>