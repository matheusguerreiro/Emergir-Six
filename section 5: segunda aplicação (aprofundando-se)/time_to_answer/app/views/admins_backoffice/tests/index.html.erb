<h1 class="pb-3">Provas</h1>
<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">descrição</th>
      <th scope="col">assunto</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_test_path, class:"btn btn-success btn-circle btn-sm" do %>
          <i class="fas fa-plus-square"></i>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <tr scope="row">
        <td><%= test.id %></td>
        <td><%= test.description %></td>
        <td><%= test.subject.description %></td>
        <td>
          <%= link_to edit_admins_backoffice_test_path(test.id), class:"btn btn-primary btn-circle btn-sm" do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to admins_backoffice_test_path(test.id),
              method: :delete,
              data: {confirm:"Tem certeza?"},
              class:"btn btn-danger btn-circle btn-sm" do %>
            <i class="fas fa-minus-square"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @tests %>
</div>
