<div class="bg-secondary text-white px-3 pt-3 pb-1 rounded-top">
  <h1>Site::Welcome#index</h1>
  <p class="text-warning">Find me in app/views/site/welcome/index.html.erb</p>
</div>

<div class="bg-light container-fluid pt-4 pb-2 rounded-bottom">
  <div class="text-left">
    <% if admin_signed_in? %>
      <p>Admin: <span class="text-success">LOGADO</span> como <em class="text-success"><%= current_admin.email %></em></p>
    <% else %>
      <p>Admin: <span class="text-danger">N√ÉO LOGADO</span></p>
    <% end %>
  </div>
</div>



<% @questions.each do |question| %>
  <div class="mt-3 border rounded text-left">
    <div class="bg-light border-bottom pt-2 pl-2">
      <h5><%= question.description %> <span class="text-warning"><%= question.subject.description %></span></h5>
    </div>
    <div class="pt-3">
      <ul>
        <% question.answers.each do |answer| %>
          <li><%= answer.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
