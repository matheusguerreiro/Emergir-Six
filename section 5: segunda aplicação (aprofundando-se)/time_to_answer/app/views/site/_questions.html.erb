<% @questions.each do |question| %>
  <%= form_with url: site_answer_path, local: true do |form| %>
    <div class="mt-3 border rounded text-left">
      <div class="bg-light border-bottom pt-2 pl-2">
        <h5><%= question.description %> (<span class="text-info"><%= question.subject.description %></span>)</h5>
      </div>
      <div class="pt-3">
        <ul class="form-check">
          <% question.answers.each do |answer| %>
            <li>
              <%= radio_button_tag 'answer', answer.id %>
              <%= answer.description %>
            </li>
          <% end %>
          <li>
            <%= form.submit "Responder", class:"btn btn-info btn-sm mt-2" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
<div class="d-flex justify-content-center">
  <%= paginate @questions %>
</div>
