<div class="d-flex w-100 justify-content-between bg-secondary text-white pt-2 pb-1 px-1 mb-3 rounded">
  <div></div>
  <h2>Prova <%= @user_test.test.description %></h2>
  <% if 5 > 7 %>
    <div class="btn btn-success">Nota: #</div>
  <% else %>
    <div class="btn btn-danger">Nota: #</div>
  <% end %>
</div>
<% @user_test.test.questions.each do |question| %>
  <div class="card mb-3">
    <h5 class="card-header">
      Quest√£o
      <%= question.id %>
    </h5>
    <div class="card-body">
      <div class="d-flex">
        <h5 class="card-title"><%= question.description %></h5>
      </div>
      <span style="position: absolute; right: 21px;">Peso: <%= question.weight %></span>
      <hr>
      <ul style="list-style: none;">
        <% question.answers.each do |answer| %>
          <li>
            <%= radio_button_tag "form_questions[#{question.id}][]", answer.id, (@user_test.answer_ids.include?(answer.id)), disabled: true %>
            <span class="card-text"><%= answer.description %></span>
          </li>
        <% end %>
        <hr>
      </ul>
    </div>
  </div>
<% end %>
